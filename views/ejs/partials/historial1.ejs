<%- include('header.ejs')%> 

<br><br>
<div class="container">
  <% if (data.length > 0) { %>
      <!---->
      <% for( dato of data ) { %>
          <% if (dato != null) { %>
            <br><br>
            <div class="row justify-content-end row-lg-4">
              <div class="col col-lg-2 bg-dark">
                <img src=<%= dato.thumbnail %>
                  style="width: 100px; height: 100px;">
              </div>
              <div class="col col-lg-6 bg-dark text-white">
                <div class="row">
                  <div class="col">
                    <p class="font-weight-bold"><%= dato.title %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <p class=""><%= dato.price %></p>
                  </div>
                </div>
                <div class="row justify-content-end">
                  <div class="col justify-content-end">
                    <button id="contenedor-formulario" style="align-items: center;" class="btn btn-success" type="submit" >Agregar</button>
                  </div>
                </div>
              </div>
            </div>
          <% } else{ %>
            <p class="alert alert-danger">No hay ningun id con ese numero</p>  
          <% } %>
      <% } %>
  <% } else{ %>
    <p class="alert alert-danger">No se encontraron los datos</p>  
  <% } %>
</div>

<%- include('footer.ejs') %> 